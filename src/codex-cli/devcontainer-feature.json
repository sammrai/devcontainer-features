{
  "id": "codex-cli",
  "version": "1.0.0",
  "name": "OpenAI Codex CLI",
  "description": "Installs the OpenAI Codex CLI for AI-powered coding assistance",
  "documentationURL": "https://www.npmjs.com/package/@openai/codex",
  "options": {
    "nodeVersion": {
      "type": "string",
      "default": "22",
      "description": "Node.js LTS version to install (required for Codex CLI)"
    },
    "installGlobally": {
      "type": "boolean",
      "default": true,
      "description": "Install Codex CLI globally (recommended)"
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
